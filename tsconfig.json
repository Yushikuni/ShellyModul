{
  "compilerOptions": {
    "outDir": "./dist", // Tu jsou zkopmilovane spustitelne soubory
    "types": ["node"],
    "target": "ES2020",
    "module": "commonjs", // Pouyiti commonjs abych nemusela mit using ci include nebo import pro fetch
    "strict": true, // Priste tzpovani
    "esModuleInterop": true, // tohle umoznuje kompatibilitu s CommonJS
    "skipLibCheck": true, // Zrychluje kompilaci
    "forceConsistentCasingInFileNames": true
  },
  "include": [ "**/*.ts" ],
  "exclude": [ "node_modules" ]
}

